<%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: "admin_login_form"}) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "メールアドレス", autocomplete: "email", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "パスワード", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, value: "ログイン状態を記憶する" %>
    </div>
  <% end -%>

  <%= f.submit "企業管理者様ログイン", class: "form-btn btn btn-success btn-qot" %>
<% end %>