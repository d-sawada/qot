<%= form_with(model: @sys_admin, url: session_path(@sys_admin), id: "sys_admin_login_form") do |f| %>
  <h1 class="text-center">システム管理者ログイン</h1>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "メールアドレス", autocomplete: "email", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "パスワード", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, value: "ログイン状態を記憶する" %>
    </div>
  <% end -%>

  <%= f.submit "システム管理者ログイン", class: "form-btn btn btn-primary  btn-lg d-block m-auto" %>
<% end %>
