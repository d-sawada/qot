<% table_id ||= nil %>
<% table_class ||= "" %>
<% table_class += ' table table-bordered table-hover table-sm text-nowrap qot-table' %>
<% row_ids ||= [] %>

<div class="table-responsive">
  <table id="<%= table_id %>" class="<%= table_class %>">
    <thead>
      <tr>
        <% table_keys.each do |key| %>
          <th scope="col"><%= key %><span/></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% (0..table_rows.length - 1).each do |i| %>
        <tr id="<%= row_ids[i] %>">
          <% table_rows[i].each do |val| %>
            <td><%= val %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
