<!DOCTYPE html>
<html>
  <head>
    <title>QueenOfTime</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <% if employee_signed_in? %>
      <%= link_to '従業員Logout', "#{@company_code}/employee/sign_out", method: :delete %>
    <% end %>

    <% if admin_signed_in? %>
      <%= link_to '管理者Logout', "#{@company_code}/admin/sign_out", method: :delete %>
    <% end %>

    <%= yield %>
  </body>
</html>
