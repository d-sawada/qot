<!DOCTYPE html>
<html>
  <head>
    <title>QueenOfTime</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <% if sys_admin_signed_in? %>
      <ul class="clearfix">
        <li>システム管理者：<%= current_sys_admin.email %></li>
        <li><%= link_to "ログアウト", "/sign_out", method: :delete %></li>
      </ul>
    <% end %>

    <% if admin_signed_in? || sys_admin_signed_in? %>
      <ul class="clearfix">
        <li><%= link_to "日リスト", employees_path(list: "day") %></li>
        <li><%= link_to "月リスト", employees_path(list: "month") %></li>
        <!-- <li><%= link_to "スケジュール", employees_path(list: "schedule") %></li> -->
        <li><%= link_to "申請一覧", requests_path %></li>
        <li><%= link_to "従業員追加", new_employee_registration_path %></li>
        <li><%= link_to "設定", setting_path %></li>
        <% if admin_signed_in? %>
          <li><%= link_to "ログアウト", "/#{@company_code}/admin/sign_out", method: :delete %></li>
        <% end %>
        <li>管理者：<%= @admin.email %></li>
      </ul>
    <% end %>

    <% if employee_signed_in? || sys_admin_signed_in? %>
      <ul class="clearfix">
        <li><%= link_to "タイムカード", timecard_path %></li>
        <% if employee_signed_in? %>
          <li><%= link_to 'ログアウト', "/#{@company_code}/employee/sign_out", method: :delete %></li>
        <% end %>
        <li>従業員：<%= @employee.name %></li>
      </ul>
    <% end %>

    <%= yield %>
  </body>
</html>
