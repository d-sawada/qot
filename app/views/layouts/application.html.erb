<!DOCTYPE html>
<html>
  <head>
    <title>QueenOfTime</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <% if employee_signed_in? %>
      <%= link_to '従業員Logout', "#{@company_code}/employee/sign_out", method: :delete %>
    <% end %>

    <% if admin_signed_in? %>
      <ul class="clearfix">
        <li><%= link_to "日リスト", employees_path %></li>
        <li><%= link_to "月リスト", employees_path %></li>
        <li><%= link_to "スケジュール", employees_path %></li>
        <li><%= link_to "従業員追加", new_employee_registration_path %></li>
        <li><%= link_to "設定", setting_path %></li>
        <li><%= link_to "ログアウト", "#{@company_code}/admin/sign_out", method: :delete %></li>
        <li><%= "管理者：#{current_admin.email}" %></li>
      </ul>
    <% end %>

    <%= yield %>
  </body>
</html>
