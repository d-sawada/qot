$("#contents .alert").remove();
<% if @work_pattern.errors.any? %>
  $("#contents").prepend('<p class="alert alert-danger"><%= @message %></p>');
<% else %>
  $("#patterns-table tbody").append('<%= j(render "table_row", {row_id: @row_id, row: @row}) %>');
  $(".select-pattern").append('<option value="<%= @work_pattern.id %>"><%= @work_pattern.name %></option>');
  $("#contents").prepend('<p class="alert alert-primary"><%= @message %></p>');
  $("#pattern-form input[type='text']").val('');
  $("#pattern-form select").val('当日')
<% end %>