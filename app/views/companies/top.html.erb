<div id="top-content" class="row justify-content-center d-flex align-items-center">
  <div id="watch-wrapper" class="col-sm-12 col-md-6">
    <%= image_tag("watch.png") %>
  </div>

  <div id="top-right-content" class="col-sm-12 col-md-5">
    <h1 id="top-title">Queen of Time</h1>

    <hr>

    <% if notice %><p class="alert alert-primary"><%= notice %></p><% end %>
    <% if alert %><p class="alert alert-danger"><%= alert %></p><% end %>
    <%= form_with(local: true, url: create_company_path, id: "trial-form") do |f| %>
      <% if @admin.errors.any? %>
        <div id="error_explanation">
          <% @admin.errors.full_messages.each do |message| %>
            <div class="alert alert-danger" role="alert"><%= message %></div>
          <% end %>
        </div>
      <% end %>
      <% if @company.errors.any? %>
        <div id="error_explanation">
          <% @company.errors.full_messages.each do |message| %>
            <div class="alert alert-danger" role="alert"><%= message %></div>
          <% end %>
        </div>
      <% end %>
      <h2 class="text-center">30日間無料トライアルに申し込む</h2>
      <div class="form-group">
        <label class="col-form-label col-form-label-lg">企業名</label>
        <input type="text" name="company[name]" class="form-control form-control-lg col" placeholder="（株）勤怠クラウド" required>
      </div>
      <div class="form-group">
        <label class="col-form-label col-form-label-lg">管理者様お名前</label>
        <input type="text" name="admin[name]" class="form-control form-control-lg col" placeholder="鈴木　太郎" required>
      </div>
      <div class="form-group">
        <label class="col-form-label col-form-label-lg">管理者様メールアドレス</label>
        <input type="email" name="admin[email]" class="form-control form-control-lg col" placeholder="email@example.com" required>
      </div>
      <div class="actions form-row justify-content-center">
        <%= f.submit "トライアルに申し込む", class: "btn btn-warning btn-lg col-6" %>
      </div>
    <% end %>

    <hr id="top-form-right-hr">

    <%= form_with(local: true, url: top_path, id: "notice-company-form") do |f| %>
      <h2 class="text-center">企業別ログインフォーム</h2>
      <div class="form-row">
        <div class="form-group col-5">
          <%= f.text_field :code, class: "form-control form-control-lg", placeholder: "企業コード" %>
        </div>
        <div class="actions text-center col-7 row ml-1">
          <%= f.submit "管理者様ログイン画面", class: "btn btn-primary btn-lg col-11" %>
          <%= f.submit "社員ログイン画面", class: "btn btn-primary btn-lg col-11" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
