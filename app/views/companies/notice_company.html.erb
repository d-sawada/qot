<div id="notice-company">
  <%= form_with(local: true, url: '/notice_company', class: "form-block") do |f| %>
    <div class="form-title">企業コード入力</div>

    <div class="form-group">
      <%= f.text_field :code, class: "form-control form-control-lg", placeholder: "企業コード" %>
    </div>
    <div class="actions">
      <%= f.submit "管理者様ログイン画面へ", class: "btn btn-primary btn-lg" %>
      <%= f.submit "社員ログイン画面へ", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>